<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".EventActivity">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:id="@+id/eventsummary">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/eventname"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:textSize="30sp"
                android:textStyle="bold"
                android:text="EventX"
                />
            <TextView
                android:layout_width="wrap_content"
                android:text="Leave"
                android:gravity="center_vertical"
                android:paddingEnd="10sp"
                android:id="@+id/eventjoin"
                android:drawableStart="@drawable/baseline_remove_circle_outline_24"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/eventname"
                android:layout_alignTop="@+id/desctitle"
                android:layout_alignBottom="@+id/desctitle"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Event Summary"
                android:layout_margin="10sp"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_below="@+id/eventname"
                android:id="@+id/desctitle"
                android:layout_marginLeft="5dp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:drawableStart="@drawable/baseline_access_time_24"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/desctitle"
                android:drawablePadding="5sp"
                android:textSize="18sp"
                android:layout_margin="10sp"
                android:paddingStart="10sp"
                android:paddingEnd="10sp"
                android:gravity="center_vertical"
                android:text="Time:"
                android:id="@+id/eventtime"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/baseline_history_edu_24"
                android:layout_alignTop="@+id/eventtime"
                android:layout_alignBottom="@+id/eventtime"
                android:id="@+id/edit"
                android:layout_alignStart="@+id/eventjoin"
                android:text="Edit"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/baseline_location_on_24"
                android:layout_below="@+id/eventtime"
                android:layout_margin="10sp"
                android:paddingStart="10sp"
                android:paddingEnd="10sp"
                android:drawablePadding="5sp"
                android:textSize="18sp"
                android:text="Location:"
                android:gravity="center_vertical"
                android:id="@+id/eventlocation"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/baseline_description_24"
                android:layout_below="@+id/eventlocation"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="10sp"
                android:paddingStart="10sp"
                android:textSize="18sp"
                android:drawablePadding="5sp"
                android:paddingEnd="10sp"
                android:gravity="center_vertical"
                android:text="Description: "
                android:id="@+id/aboutevent"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/descblock"
                android:layout_below="@+id/aboutevent"
                android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10sp"
                android:paddingEnd="15sp"
                android:paddingStart="38sp"
                android:textSize="18sp"
                android:maxLines="5"
                android:text="scription is the pattern of narrative development that aims to make vivid a place, object, character, or group. Description is one of four rhetorical modes (also known as modes of discourse), along with exposition, argumentation, and narration."
                android:id="@+id/desc"/>

            <Button
                android:id="@+id/btShowmore"
                android:layout_width="match_parent"
                android:text="Show more..."
                android:layout_marginRight="20sp"
                android:textAllCaps="false"
                android:gravity="right"
                android:textColor="@android:color/holo_blue_light"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content" />

            </LinearLayout>

            <ImageButton
                android:layout_width="45sp"
                android:layout_height="45sp"
                android:text="Chat"
                android:id="@+id/chat"
                android:src="@drawable/message"
                android:background="@color/colorPrimaryDark"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/descblock"/>

        </RelativeLayout>


    </LinearLayout>

</ScrollView>
